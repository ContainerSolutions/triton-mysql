{
  "consul": "{{ .TRITON_MYSQL_CONSUL }}:8500",
  "preStart": "python /bin/triton-mysql.py",
  "postStop": "python /bin/triton-mysql.py post_stop",
  "services": [
    {
      "name": "mysql",
      "port": 3306,
      "health": "python /bin/triton-mysql.py health",
      "poll": 5,
      "ttl": 25
    }
  ],
  "backends": [
    {
      "name": "mysql-primary",
      "poll": 10,
      "onChange": "python /bin/triton-mysql.py on_change"
    }
  ]
}
